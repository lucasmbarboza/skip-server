# SKIP Server with OpenTelemetry Environment Configuration

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=skip-server
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=production
OTEL_RESOURCE_ATTRIBUTES=service.name=skip-server,service.version=1.0.0,deployment.environment=production

# OTEL Collector Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# External Splunk Configuration
SPLUNK_HOST=localhost
SPLUNK_HEC_ENDPOINT=http://${SPLUNK_HOST}:8088
SPLUNK_HEC_TOKEN=12345678-1234-1234-1234-123456789012

# Skip Server Configuration
SKIP_SERVER_PORT=8080
SKIP_SERVER_HOST=0.0.0.0

# Database Configuration (MySQL running on host)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=my_database_name
MYSQL_USER=my_user
MYSQL_PASSWORD=my_user_password_here
MYSQL_ROOT_PASSWORD=your_root_password_here
SKIP_LOCAL_SYSTEM_ID=system_001
SKIP_REMOTE_SYSTEM_ID=system_002
ENVIRONMENT=development
# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=8888